---
import Image from "astro/components/Image.astro";
import "../styles/global.css";
import MyQuote from "./MyQuote.astro";
---

<div id="hero"
     class="min-h-screen w-full bg-gradient-to-b from-neutral-900 via-neutral-950 to-black text-white flex flex-col items-center overflow-hidden relative">

  <div class="pointer-events-none absolute inset-0 opacity-[0.07]">
    <div
      class="absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 w-[1200px] h-[1200px] rounded-full bg-red-600 blur-[180px] opacity-40"></div>
    <div class="absolute bg-cover bg-center opacity-[0.06] mix-blend-screen"></div>
  </div>

  <header id="header-block" class="relative flex flex-col items-center justify-center gap-5 pt-28 pb-10 z-20">
    <div id="photo-wrap" class="relative">
      <Image
        id="photo"
        src="/my-photo.svg"
        alt="profile"
        width="200"
        height="200"
        loading="eager"
        class="rounded-full shadow-[0_0_25px_rgba(255,80,80,0.4)]"
      />
    </div>

    <div id="subtitle" class="text-neutral-300 text-lg tracking-wide">
      Senior Software Engineer • Builder • Thinker
    </div>
    <div id="socials" class="flex items-center gap-8 text-white">
      <a
        href="https://github.com/bhavanichandra"
        target="_blank"
        rel="noopener noreferrer"
        class="flex items-center gap-2 hover:opacity-80 transition"
      >
        <img src="/github.svg" alt="GitHub" class="w-6 h-6" />
      </a>
      <a
        href="mailto:bhavanichandra9+site@gmail.com"
        class="flex items-center gap-2 hover:opacity-80 transition"
      >
        <img src="/email.svg" alt="Email" class="w-6 h-6 text-white" />
      </a>

      <a
        href="https://www.linkedin.com/in/bhavanichandra/"
        target="_blank"
        rel="noopener noreferrer"
        class="flex items-center gap-2 hover:opacity-80 transition"
      >
        <img src="/linkedin.svg" alt="LinkedIn" class="w-6 h-6 border-white" />
      </a>

    </div>

  </header>

  <main id="quote-block" class="relative w-full max-w-6xl px-4 pb-24 z-20">
    <MyQuote />
  </main>

</div>

<script>
  import gsap from "gsap";

  const photo = document.getElementById("photo");
  const subtitle = document.getElementById("subtitle");
  const quoteBlock = document.getElementById("quote-block");
  const socials = document.getElementById("socials");

  if (photo && subtitle && quoteBlock && socials) {
    const tl = gsap.timeline();

    tl.from(photo, {
      scale: 0.8,
      opacity: 0,
      duration: 0.6,
      ease: "power3.out"
    });

    tl.from(subtitle, {
      opacity: 0,
      y: 10,
      duration: 0.5,
      ease: "power3.out"
    }, "-=0.2");

    tl.fromTo(socials.querySelectorAll("a"), {
      opacity: 0,
      y: -10
    }, {
      opacity: 1,
      y: 0,
      duration: 0.5,
      ease: "none"
    });

    tl.from(quoteBlock, {
      opacity: 0,
      y: 40,
      duration: 0.7,
      ease: "power3.out"
    }, "-=0.1");
  }
</script>
